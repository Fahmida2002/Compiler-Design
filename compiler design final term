#include <iostream>
using namespace std;
int main() {
    string s;
    cout << "Enter string (over a,b): ";
    cin >> s;
    int state = 0;   // start state
    bool valid = true;
    for (int i = 0; i < s.length(); i++) {
        char c = s[i];
        switch (state) {
        case 0: // start, (ba)*
            if (c == 'b') state = 1;
            else if (c == 'a') state = 3;
            else valid = false;
            break;

        case 1: // seen b, expect a for (ba)
            if (c == 'a') state = 0;
            else valid = false;
            break;

        case 3: // b* then mandatory a matched
            if (c == 'a') state = 3;
            else if (c == 'b') state = 4;
            else valid = false;
            break;

        case 4: // ba(a+b) part
            if (c == 'a' || c == 'b') state = 3;
            else valid = false;
            break;
        }

        if (!valid) break;
    }
    // Final accepting states
    if (valid && (state == 3 || state == 0))
        cout << "Accepted âœ…" << endl;
    else
        cout << "Rejected âŒ" << endl;

    return 0;
}
